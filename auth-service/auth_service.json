{
  "info": {
    "name": "Auth Service API",
    "description": "Colección de pruebas para autenticación básica sin tokens (login y logout).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "item": [
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"bastian@gmail.com\",\n  \"password\": \"bastian1234\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["login"]
        }
      }
    },
    {
      "name": "Logout",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/logout",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["logout"]
        }
      }
    }
  ]
}
