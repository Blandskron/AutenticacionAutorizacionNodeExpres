{
  "openapi": "3.0.0",
  "info": {
    "title": "Auth Service API",
    "version": "1.0.0"
  },
  "paths": {
    "/login": {
      "post": {
        "summary": "Login sin autenticaci√≥n",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "password": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Respuesta con usuario o error"
          }
        }
      }
    },
    "/logout": {
      "get": {
        "summary": "Logout ficticio",
        "responses": {
          "200": {
            "description": "Respuesta sin efecto real"
          }
        }
      }
    }
  }
}
